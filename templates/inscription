function verifierFormulaire() {
    const p1 = document.getElementById("password").value.trim();
    const p2 = document.getElementById("confirm_password").value.trim();

    if (p1 !== p2) {
        alert("âŒ Les mots de passe ne correspondent pas !");
        return false;
    }

    if (p1.length < 4) {
        alert("âš ï¸ Le mot de passe doit contenir au moins 4 caractÃ¨res.");
        return false;
    }

    return true;
}
